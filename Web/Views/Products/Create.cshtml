@{
    ViewData["Title"] = "CreateUser";
}


<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-6">

                <div class="card shadow-2-strong">
                    <div class="row g-0">
                        <!-- Formulario -->
                        <div class="m-2">
                            <div class="card-body p-5 text-center">

                                <h3 class="">Register a user</h3>
                                <p class="mb-4">You can register a user with roles to access to the system</p>

                                @if (ViewBag.Error != null)
                                {
                                    <div class="alert alert-danger text-sm-center" role="alert">
                                        @ViewBag.Error
                                    </div>
                                }

                                <form asp-action="Create" method="post">

                                    @*ProductID*@
                                    <input type="number" name="ProductID" id="inputProductID" hidden />

                                    @*Name*@
                                    <div class="form-outline mb-4">
                                        <input type="text" name="email" id="inputName" class="form-control form-control-lg"
                                               autocomplete="name" required />
                                        <label class="form-label" for="inputName">Name</label>
                                    </div>

                                    @*Price*@
                                    <div class="form-outline mb-4">
                                        <input type="number" name="price" id="inputPrice" class="form-control form-control-lg"
                                               autocomplete="price" required />
                                        <label class="form-label" for="inputPrice">Price</label>
                                    </div>

                                    @*description*@
                                    <div class="form-outline mb-4">
                                        <textarea type="text" name="Description" id="inputDescription" class="form-control form-control-lg"
                                                  autocomplete="Description" required />
                                        <label class="form-label" for="inputDescription">Description</label>
                                    </div>

                                    @*Category Name*@
                                    <div class="form-outline mb-4">
                                        <input type="text" name="CategoryName" id="inputCategoryName" class="form-control form-control-lg"
                                               autocomplete="CategoryName" required />
                                        <label class="form-label" for="inputCategoryName">Category Name</label>
                                    </div>

                                    @*Image*@
                                    <div class="form-outline mb-4">
                                        <input type="file" name="Image" id="inputImage" class="form-control form-control-lg"
                                               autocomplete="Image" required />
                                        <label class="form-label" for="inputImage">File</label>
                                    </div>


                                    <button class="btn btn-primary btn-lg btn-block" type="submit">
                                        Save Product
                                    </button>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
