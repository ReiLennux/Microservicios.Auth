@{
    ViewData["Title"] = "CreateUser";
}

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-6">

                <div class="card shadow-2-strong">
                    <div class="row g-0">
                        <!-- Formulario -->
                        <div class="m-2">
                            <div class="card-body p-5 text-center">

                                <h3 class="">Register a user</h3>
                                <p class="mb-4">You can register a user with roles to access to the system</p>

                                @if (ViewBag.Error != null)
                                {
                                    <div class="alert alert-danger text-sm-center" role="alert">
                                        @ViewBag.Error
                                    </div>
                                }

                                <form asp-action="Create" method="post">

                                    <div class="form-outline mb-4">
                                        <input type="email" name="email" id="inputEmail" class="form-control form-control-lg"
                                               autocomplete="email" required />
                                        <label class="form-label" for="inputEmail">Email</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="text" name="name" id="inputName" class="form-control form-control-lg"
                                               autocomplete="name" required />
                                        <label class="form-label" for="inputName">Name</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" name="password" id="inputPassword" class="form-control form-control-lg"
                                               autocomplete="current-password" required />
                                        <label class="form-label" for="inputPassword">Password</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="number" name="PhoneNumber" id="inputPhoneNumber" class="form-control form-control-lg"
                                               autocomplete="current-password" required />
                                        <label class="form-label" for="inputPhoneNumber">Phone Number</label>
                                    </div>


                                    <button class="btn btn-primary btn-lg btn-block" type="submit">
                                        Save User
                                    </button>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
