@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@if (HttpContextAccessor.HttpContext.Session.GetString("AuthToken") != null)
{

    <header class="p-3 text-bg-dark">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <img src="#" alt="Company Icon" />
                </a>
                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a class="nav-link px-2 text-white link-opacity-50-hover" href="@Url.Action("Index", "Users")">Users</a></li>
                    <li><a class="nav-link px-2 text-white link-opacity-50-hover" href="@Url.Action("Index", "Home")">Home</a></li>
                </ul>
                <div class="text-end">
                    <form asp-controller="Auth" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-danger">
                            Sign Out
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </header>

}
